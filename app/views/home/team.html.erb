<br/>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title gray">
      <% if @team_number > 0 %>
        Your Superhero Team
      <% else %>
        How Many Team Members Do You Want?</h3>
      <% end %>
  </div>
    <div class="panel-body">
      <% if @team_number > 0  %>
        <%= render 'home/show_team' %>
      <% else %>
        <%= render 'home/create_team' %>
      <% end %>
    </div>
  <div class="panel-footer"><%= link_to 'Create A Whole Superhero Team', my_team_path %></div>
</div>

